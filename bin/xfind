#!/bin/bash

parm="";
for par in $@; do
	parm="$parm $par"
done
start=`expr ${#1} + 2`
len=`expr ${#parm} - ${#1}`
key=${parm:$start:$len}

# filter & distinguish bash
FILE_TYPES='\.c \.h \.py \.erl \.java \.js \.jsx \.cpp \.aidl' # including Makefile

if [[ $OSTYPE == *'darwin'* ]]; then # mac
    FILE_TYPE='(Makefile|.*(c|h|py|erl|java|js|jsx|cpp|aidl))'
    find -E $1 -regex $FILE_TYPE -type f \
        | xargs grep --color=auto -n "${key}"

elif [[ $OSTYPE == *'linux'* ]]; then # linux
    FILE_TYPE='.*(Makefile'
    for t in $FILE_TYPES; do
        FILE_TYPE+='|'$t
    done
    FILE_TYPE+=')'
    find $1 -regextype posix-egrep -regex "$FILE_TYPE" -type f \
        | xargs grep --color=auto -n "${key}"
fi

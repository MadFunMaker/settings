#!/bin/bash
TMUX_VERSION=`tmux -V`
TMUX_NAME=$1

if [[ "$TMUX_VERSION" > "tmux 1.6" ]]
then
    tmux new-session -A -s $TMUX_NAME
else
    TMUX_LS=`tmux ls | grep $TMUX_NAME`
    echo $TMUX_LS
    if [[ $TMUX_LS == *$TMUX_NAME* ]]
    then
        tmux a -t $TMUX_NAME
    else
        tmux new -s $TMUX_NAME
    fi
fi
